#!/usr/bin/env python

'readTextFile.py--read and display text file'

#get filename
fname=raw_input('Enter filename:')    #用户输入为fname
print

#attempt to open file for reading
try:
	fobj=open(fname,'r')       #打开fname，写入操作
except ioerror,e:
	print "***file open error :",e          #输出错误
else:
	#display centents to the screen
	for eachline in fobj：        
		print eachline,             #打印fobj中的每一行
	fobj.close()             #关闭fobj
