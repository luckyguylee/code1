#ÔºÅ/usr/bin/python
#Filename:finally.py

import time

try:
    f=open('poem.txt')
    while True:
        line=f.readline()
        if len(line)==0:
            break
        print(line,end='')
        time.sleep(10)
except KeyboardInterrupt:
        print('!!you cancelled the reading from the file .')
finally:
        f.close()
        print('(cleaning up:closed the file)')
